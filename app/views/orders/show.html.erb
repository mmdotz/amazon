<div class="container">
  <section id="order_print">
    <h3>
      <strong>Viewing order <%= @order.id %> for <%= @order.user.name %> </strong>
    </h3>

    <p>
      <strong>Paid:</strong>
      <%= @order.paid %>
    </p>

    <h4>
      <strong>You bought:</strong><br>
      <% @order.lineitems.each do |lineitem| %>
      qty: <%= lineitem.qty %>: <%= lineitem.item.title %> by
      <%= lineitem.item.desc %></br>
      <% end %>
    </h4>
  </section>


<%= link_to 'Edit', edit_order_path(@order), class: "btn btn-info btn-sm" %> |
<%= link_to 'Back', orders_path, class: "btn btn-info btn-sm" %>
</div>
