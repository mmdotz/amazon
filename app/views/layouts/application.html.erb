<!DOCTYPE html>
<html>
<head>
  <title>Amazon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="jumbotron">
    <h1>Welcome</h1>
  </div>
  <p id="notice"><%= notice %></p>
  <div class='row'>
    <div class='col-md-offset-3 col-md-6'>
      <%= yield %>
    </div>
  </div>
</body>
<footer>
  <a class="btn btn-info btn-sm" href=/items role="button">Home</a>
  <a class="btn btn-info btn-sm" href=/login role="button">Login or Create an account</a>
  <!-- <a class="btn btn-info btn-sm" href=/user/:id/order role="button">View current Order</a> -->
  <a class="btn btn-info btn-sm" href=/logout role="button">Logout</a>
  <% if current_user %>
    <% if current_user.orders.where(paid: false).length >= 1 %> <!--if user has no pending orders -->
    <%= link_to 'Open a new order', orders_path, method: :POST %>
    <% end %>
  <% end %>




</footer>
<%= "User logged in: #{current_user.name}" if current_user %>

</html>
